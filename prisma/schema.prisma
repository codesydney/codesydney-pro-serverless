generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  //TODO: Boss I'm removing the default UUIDV4 to manually pass UUIDV7 as it is better for indexing
  id        String @id 
  email     String @unique
  password  String
  role      Roles @default(USER) 
  firstName String
  lastName  String
}

enum Roles {
  USER
  ADMIN
}
